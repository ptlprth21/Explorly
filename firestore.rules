rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Bookings Collection:
    // - Users can only read their own bookings.
    // - Users can only create bookings for themselves.
    // - No one can update or delete bookings through the client (manage this via server-side logic if needed).
    match /bookings/{bookingId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if false;
    }

    // Reviews Collection:
    // - Anyone can read reviews (they are public).
    // - Only authenticated users can create a new review.
    // - Users cannot update or delete reviews from the client.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}
